{
  "ConnectionStrings": {
    "EcommerceDbContext": "Data Source=localhost,1433;Database=PhoneCard_Test;Trusted_Connection=False;User Id=sa;Password=zaQ@1234;"
  },
  "AllowedHosts": "*",
  "Cache": {
    "Type": "Memory",
    "SlidingExpirationInMinutes": 10,
    "AbsoluteExpirationInMinutes": 1440,
    "Configuration": "",
    "InstanceName": "Doitsu.Ecommerce.Core.Tests"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "IdentityServer4": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "ColoredConsole",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] [{ThreadId}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "path": "logs\\log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "{Timestamp:o} [{Level:u3}] [{ThreadId}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": { "Application": "Microservice.Security.Tests" }
  }
}
